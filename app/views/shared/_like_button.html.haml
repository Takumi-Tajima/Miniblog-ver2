- if user_signed_in?
  - if post.liked_by?(current_user)
    - like = current_user.likes.find_by(post_id: post.id)
    = button_to post_like_path(post, like), method: :delete, class: 'btn btn-link p-0 border-0 text-decoration-none', id: 'unlike-button' do
      .bi.bi-heart-fill.text-danger
  - else
    = button_to post_likes_path(post), method: :post, class: 'btn btn-link p-0 border-0 text-decoration-none', id: "like-button" do
      .bi.bi-heart.text-body
